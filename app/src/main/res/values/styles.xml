    <!--  EditText  -->
    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@drawable/selector_text_input_bg</item>
        <item name="boxStrokeColor">@color/text_input_layout_stroke_color</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="hintEnabled">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="passwordToggleTint">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="endIconTint">@color/black</item>
        <item name="helperTextTextAppearance">@style/TextAppearance.S12</item>
    </style>

    <style name="TextInputEditText">
        <item name="android:backgroundTint">@drawable/selector_text_input_bg</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">@style/TextAppearance.S16</item>
        <item name="android:textColorHint">@color/grey3</item>
    </style>

    <!-- Buttons -->
    <style name="Button.Main" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearance">@style/DefaultShapeAppearance</item>
        <item name="android:textColor">@drawable/selector_button_main_text</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Medium.S16</item>
        <item name="textAllCaps">false</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="backgroundTint">@drawable/selector_button_main_blue</item>
    </style>

    <!--  Dialog Fragment   -->
    <style name="DialogFragmentTheme" parent="android:Theme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="DialogFragmentStyle">
        <item name="android:background">@drawable/bg_float_dialog</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/enter_slide_up</item>
        <item name="android:windowExitAnimation">@anim/exit_slide_down</item>
    </style>
</resources>